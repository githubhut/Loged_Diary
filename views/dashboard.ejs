<p class="lead mb-3">Welcome <%= name %></p>
<h3>
    Please make sure that each title is different from another
</h3>
<%- include ("partials/messages") %>
<div class="home_container">
    <% post.forEach((e) => { %>
        <div class="pst">
            <h2> <%= e.title %></h2>
            <p>
                <% if (e.content.length > 10) { %>
                    <%= e.content.substring(0, 10) + "..." %>
                    <a href="/posts/<%= e.title %>">Read More</a>
                <% } else { %>
                    <%= e.content %>
                <% } %>
            </p>
        </div>
    <% }) %>
</div>
<a href="/users/logout" class="rdbtn btn btn-primary">Logout</a>
