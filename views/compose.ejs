<div class="options-wrapper">
    <div class="options-header" onclick="toggleOptions()">
        &#8801; Options
    </div>
    <div class="options-content" id="optionsContent">
        <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/common_post">Common Area</a></li>

        </ul>
    </div>
</div>

<h3>Compose Your Post</h3>
<%- include ("partials/messages") %>
<div class="containCompose">

    <form action="/compose" method="post">
        <label for="">Title</label>
        <input type="text" name="Title">
        <div>
            <label for="">Post</label>
            <textarea name="post" id="post" cols="10" rows="10"></textarea>
        </div>
        <div class="btnarea">
            <button type="submit" name="button">Publish</button>
        </div>
        <div class="rdbtn">
            <label for="postTypeNormal">Personal Post</label>
            <input type="radio" id="postTypeNormal" name="postType" value="normal" checked>
            
            <label for="postTypeCommon">Common Post</label>
            <input type="radio" id="postTypeCommon" name="postType" value="common">
        </div>
    </form>
    
</div>
